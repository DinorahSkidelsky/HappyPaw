
  <div class="container">
    <div class="row">
      <div class="col-6">
      <h1 class="d-flex justify-content-center"><strong>Profiles List:</strong></h1>
          <% @profiles.each do |profile| %>
          <div class="card-profile">
            <% profile.photos.each do |photo| %>
              <%= link_to (cl_image_tag photo.key, crop: :fill), profile_path(profile) %>
            <% end %>
          <li><h4><%= profile.description %></h4></li>
          <li><%= profile.location %></li>
          <li>$<%= profile.price %> / Night</li>
          <li><%= profile.phone_number %></li>
          </div>
          <% end %>
        </ul>

      </div>

    <div class="col-6">
       <div style="width: 100%; height: 80vh; position: sticky; top: 0; margin: 67px;"
         data-controller="mapbox"
         data-mapbox-markers-value="<%= @markers.to_json %>"
         data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
       </div>
       <div>
           <div>
               <%= link_to "Reservations", reservations_path, class: "btn btn-warning
               " %>
                 <%= link_to "Add a new profile", new_profile_path, class: "btn btn-warning mx-3" %>
               <%= link_to "Back to Home", root_path, class: "btn btn-dark" %>
           </div>
           </div>
       </div>
       </div>
    </div>
</div>
