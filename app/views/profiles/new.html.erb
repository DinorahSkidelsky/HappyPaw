<div class="container">
  <div class="row my-4 py-5">
    <div class="col my-4 py-5">
      <%= image_tag("formulario1.jpg", width: 650) %>
    </div>
    <div class="col border">
      <div class="d-flex justify-content-center mt-4 pt-4">
        <h1><strong>Become a Sitter</strong></h1>
      </div>
      <div class="d-flex justify-content-center mt-3 pt-3">
        <%= simple_form_for(@profile) do |f| %>
          <%= f.input :description %>
          <%= f.input :location %>
          <%= f.input :price %>
          <%= f.input :phone_number %>
          <%= f.input :photos, as: :file, input_html: { multiple: true } %>
          <%= f.button :button, {class: "btn btn-success mt-2"} do %>
            <i class="fas fa-paw"></i><strong> Create </strong>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
