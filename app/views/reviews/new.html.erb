<div class="container">
  <div class="row my-4 py-5 px-5">
    <div class="col px-5">
      <%= image_tag("rev.jpeg", width: 620, height: 450) %>
    </div>
    <div class="col-4 border">
      <div class="d-flex justify-content-center mt-3 pt-3">
        <h1><strong>Review</strong></h1>
      </div>
    <div class="d-flex justify-content-center mt-2 pt-3">
          <%= simple_form_for [ @reservation, @review ] do |f| %>
          <%= f.input :content %>
          <%= f.input :rating %>
         <div class="d-flex justify-content-center">
        <%= f.button :button, {class: "btn btn-flat mt-4"} do %>
          <i class="fas fa-paw"></i><strong> Save </strong>
        </div>
          <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
