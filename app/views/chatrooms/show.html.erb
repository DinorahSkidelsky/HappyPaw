<div class="container chatroom">

  <% if @chatroom.user.id == current_user.id %>
    <h1>You are in the chat whit <%= "#{@chatroom.profile.user.first_name} #{@chatroom.profile.user.last_name}" %></h1>
  <% else @chatroom.profile.user.id  == current_user.id %>
     <h1>You are in the chat whit <%= "#{@chatroom.user.first_name} #{@chatroom.user.last_name}" %></h1>
  <% end %>

  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div id="message-<%= message.id %>">
        <small>
          <strong><%= message.user.first_name %></strong>
          <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p><%= message.content %></p>
      </div>
    <% end %>
  </div>

  <%= simple_form_for [@chatroom, @message],
    remote: true,
    html: {class: "d-flex"} do |f|
  %>
    <%= f.input :content,
      label: false,
      placeholder: "Send a message",
      wrapper_html: {class: "flex-grow-1"}
    %>
    <%= f.submit "Send", class: "btn btn-primary" %>
  <% end %>
</div>
